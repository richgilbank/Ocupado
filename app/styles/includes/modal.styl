.modal-overlay
  background rgba(0, 0, 0, 0)
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  -webkit-transition all 0.5s ease-in-out
  transition all 0.5s ease-in-out
  z-index 100
  &.active
    background rgba(0, 0, 0, 0.7)

.modal
  color #000
  padding 20px
  width 40%
  height 40%
  position absolute
  top 30%
  left 30%
  background #fff
  z-index 150
  -webkit-transition all 0.3s ease
  transition all 0.3s ease
  opacity 0
  -webkit-transform-origin 150% 70%
  transform-origin 150% 70%
  -webkit-transform rotate(-30deg)
  transform rotate(-30deg)
  &.active
    -webkit-transform rotate(0deg)
    transform rotate(0deg)
    opacity 1

  h2
    margin-top 0
    text-transform uppercase
    font-size 20px
    font-weight 500

  .close-modal
    position absolute
    top 0
    right 0
    font-size 22px
    padding 20px
    cursor pointer

  hr
    height 1px
    border none
    background #ccc
    margin-bottom 20px
    margin-top -5px

.checkbox-group
  width 100%

  .draggable-handle
    position absolute
    height 100%
    width 20px
    top 0
    left 0
    font-size 22px
    font-family Times New Roman, serif
    line-height 6px
    padding 7px 0 0 12px
    color #bbb
    text-shadow 0 -1px 1px #fff
    box-sizing border-box

  label
    display block
    padding 10px 10px 10px 70px
    background #f3f3f3
    border-bottom 1px solid #ddd
    position relative
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    padding 10px 30px 10px 40px

    &.sortable-ghost
      opacity 0.3
      border 1px dashed #777

    &.inactive
      opacity 0.5

    &:last-child
     border-bottom none
     .border-left
       padding-bottom 0

  input[type=checkbox]
    position absolute
    right 5px

